\newcommand{\arbolwidth}{6}
\newcommand{\arbolheight}{7}
\newcommand{\arbolcatuno}{3}
\newcommand{\arbolcatdos}{4}
\newcommand{\arbolhipot}{5}
\newcommand{\arbolbase}{-3}
\newcommand{\arbolbasefml}{-2}
\newcommand{\arbolhypline}{6}
\newcommand{\arbolhypheight}{10}
\newcommand{\arbolbasename}{3}
\newcommand{\bolarheight}{4}
\newcommand{\bolarbase}{0}
\newcommand{\bolarbasename}{1}

\newcommand{\arbolConNombre}[3][.4pc]{
\setlength{\unitlength}{#1}
\parbox[c]{\arbolwidth\unitlength}
{\begin{picture}
(\arbolwidth,\arbolheight)(-\arbolcatuno,\arbolbase)
\put(0,0){\line(-\arbolcatuno,\arbolcatdos){\arbolcatuno}}
\put(0,0){\line(\arbolcatuno,\arbolcatdos){\arbolcatuno}}
\put(0,\arbolcatdos){\line(1,0){\arbolcatuno}}
\put(0,\arbolcatdos){\line(-1,0){\arbolcatuno}}
\put(0,\arbolbasename){\makebox(0,0)[c]{\ensuremath{#3}}}
\put(0,\arbolbasefml){\makebox(0,0)[c]{\ensuremath{#2}}}
\end{picture}}
\setlength{\unitlength}{1pt}}

\newcommand{\arbolHipConNombre}[4][.4pc]{
\setlength{\unitlength}{#1}
\parbox[c]{\arbolwidth\unitlength}
{\begin{picture}
(\arbolwidth,\arbolhypheight)(-\arbolcatuno,\arbolbase)
\put(0,0){\line(-\arbolcatuno,\arbolcatdos){\arbolcatuno}}
\put(0,0){\line(\arbolcatuno,\arbolcatdos){\arbolcatuno}}
\put(0,\arbolbasename){\makebox(0,0)[c]{\ensuremath{#3}}}
\put(0,\arbolbasefml){\makebox(0,0)[c]{\ensuremath{#2}}}
\put(0,\arbolhypline){\makebox(0,0)[c]{\ensuremath{#4}}}
\end{picture}}
\setlength{\unitlength}{1pt}}

\newcommand{\arbol}[2][.4pc]{\arbolConNombre[#1]{#2}{}}
\newcommand{\arbolHip}[3][.4pc]{\arbolHipConNombre[#1]{#2}{}{#3}}

\newcommand{\bolarConNombre}[2][.4pc]{
\setlength{\unitlength}{#1}
\parbox[c]{\arbolwidth\unitlength}
{\begin{picture}
(\arbolwidth,\bolarheight)(-\arbolcatuno,\bolarbase)
\put(0,\arbolcatdos){\line(-\arbolcatuno,-\arbolcatdos){\arbolcatuno}}
\put(0,\arbolcatdos){\line(\arbolcatuno,-\arbolcatdos){\arbolcatuno}}
\put(0,0){\line(1,0){\arbolcatuno}}
\put(0,0){\line(-1,0){\arbolcatuno}}
\put(0,\bolarbasename){\makebox(0,0)[c]{\ensuremath{#2}}}
\end{picture}}
\setlength{\unitlength}{1pt}}

\newcommand{\bolar}[2][.4pc]{\bolarConNombre[#1]{#2}}

